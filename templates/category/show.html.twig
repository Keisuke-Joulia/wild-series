{% extends 'base.html.twig' %}
{% block title %}Les dernières séries ajoutées{% endblock %}

{% block body %}
{% if programs %}
<h1 class="mt-3 mb-5">Les 3 dernières séries ajoutées de la catégorie :
    {{ programs.0.category.name }}</h1>
<div class="container">
    {% for program in programs %}
    <div class="card mb-3 mt-3 card border-secondary text-white bg-dark">
        <div class="row g-0">
            <div class="col-lg-4">
                <img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
            </div>
            <div class="card-body col-lg-8 text-center align-self-center">
                <h1 class="card-title">{{ program.title }}</h1>
                <p class="card-text">{{ program.synopsis }}</p>
                <h2><a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-outline-secondary">Voir la série</a></h2>
            </div>
        </div>
    </div>
    {% else %}
    Aucune série trouvée.
    {% endfor %}
    {% endif %}
</div>
<div class="ms-5">
    <a href="{{ path('category_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>
</div>

{% endblock %}