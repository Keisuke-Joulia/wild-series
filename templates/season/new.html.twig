{% extends 'base.html.twig' %}

{% block title %}Nouvelle Saison{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3 mb-3 text-center">Creer une nouvelle saison</h1>
    <div class="form-control bg-dark text-white">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="mb-3 text-center">Numéro</div>
        <div class="text-end">{{ form_errors(form.number) }}</div>
        <div class="mb-3">{{ form_widget(form.number) }}</div>
        <div class="mb-3 text-center">Année</div>
        <div class="text-end">{{ form_errors(form.year) }}</div>
        <div class="mb-3">{{ form_widget(form.year) }}</div>
        <div class="mb-3 text-center">Description</div>
        <div class="text-end">{{ form_errors(form.description) }}</div>
        <div class="mb-3">{{ form_widget(form.description) }}</div>
        <div class="mb-3 text-center">Série</div>
        <div class="text-end">{{ form_errors(form.program) }}</div>
        <div class="mb-3">{{ form_widget(form.program) }}</div>
        <div class="d-flex justify-content-center"><button class="btn btn-outline-secondary mt-1 mb-1" type='submit'>Ajouter
            une saison</button></div>
    {{ form_end(form) }}
    </div>
    <a href="{{ path('season_index') }}" class="btn btn-outline-dark mt-2">Retourner à la liste</a>
</div>
{% endblock %}
