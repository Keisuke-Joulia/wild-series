{% extends "base.html.twig" %}
{% block title %}{{ program.title }} Saison {{ season.number }}{% endblock %}

{% block body %}
<div class="container mb-5 mt-3">
  <h2>Saison {{ season.number }} de {{ program.title }} - {{ season.year }}</h2>
  <p>{{ season.description }}</p>
</div>
<div class="ms-5 mb-3">
  <h2>Liste des épisodes :</h2>
</div>
<div class="row justify-content-center">
  {% for episode in episodes %}
  <div class="col-auto mb-4">
    <div class="card text-center bg-dark">
      <div class="card-body">
        <a href="{{ path("program_episode_show", { slug: program.slug, seasonId: season.id, episodeSlug: episode.slug })
          }}" class=" btn btn-outline-secondary">Episode {{ episode.number }} : {{ episode.title }}</a>
      </div>
    </div>
  </div>
  {% else %}
  <li>Aucun épisode trouvé.</li>
  {% endfor %}
</div>
