{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
<h1>Toutes les séries de la table program : </h1>
<div class="row justify-content-center">
    {% for program in programs %}
    <div class="col-auto mb-4">
        <div class="card text-center text-white bg-dark" style="width: 20rem; height: 60rem">
            <img src="{{program.poster}}" class="card-img-top" alt="{{ program.title }} poster"
                style="min-height: 50%; max-height: 50%">
            <div class="card-body overflow-auto" style="max-height: 100%">
                <h5 class="card-title">{{ program.title }}<br> Catégorie : {{
                    program.category.name }}</h5>
                <p class="card-text">{{ program.synopsis }}</p>
            </div>
            <div class="card-footer">
                <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-outline-secondary">Voir la
                    fiche</a>
            </div>
        </div>
    </div>
    {% else %}
    Aucune série trouvée.
    {% endfor %}
</div>
<div class="ms-5">
    <a href="{{ path('app_index') }}" class="btn btn-outline-dark">Retour à l'accueil</a>
</div>
    {% endblock %}
